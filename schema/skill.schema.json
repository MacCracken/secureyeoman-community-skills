{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://github.com/MacCracken/secureyeoman-community-skills/schema/skill.schema.json",
  "title": "SecureYeoman Community Skill",
  "description": "Schema for a community-contributed SecureYeoman skill",
  "type": "object",
  "required": ["name", "instructions"],
  "additionalProperties": false,
  "properties": {
    "$schema": {
      "type": "string"
    },
    "name": {
      "type": "string",
      "minLength": 1,
      "maxLength": 200,
      "description": "Unique, human-readable skill name (max 200 chars)"
    },
    "description": {
      "type": "string",
      "maxLength": 2000,
      "default": "",
      "description": "Short description shown in the marketplace (max 2000 chars)"
    },
    "version": {
      "type": "string",
      "maxLength": 50,
      "pattern": "^\\d+\\.\\d+\\.\\d+$",
      "default": "1.0.0",
      "description": "Semantic version (major.minor.patch)"
    },
    "author": {
      "description": "Skill author. May be a plain string (legacy) or a structured object with attribution links.",
      "oneOf": [
        {
          "type": "string",
          "maxLength": 200,
          "description": "Legacy string form — your GitHub username or real name."
        },
        {
          "type": "object",
          "description": "Structured author object with optional attribution links.",
          "required": ["name"],
          "additionalProperties": false,
          "properties": {
            "name": {
              "type": "string",
              "maxLength": 200,
              "description": "Author display name."
            },
            "github": {
              "type": "string",
              "maxLength": 200,
              "description": "GitHub username (without the @ prefix)."
            },
            "website": {
              "type": "string",
              "format": "uri",
              "maxLength": 500,
              "description": "Author or project website URL."
            },
            "license": {
              "type": "string",
              "maxLength": 100,
              "description": "SPDX license identifier (e.g. 'MIT', 'Apache-2.0'). Defaults to project license if omitted."
            }
          }
        }
      ]
    },
    "category": {
      "type": "string",
      "maxLength": 100,
      "enum": [
        "development",
        "productivity",
        "security",
        "utilities",
        "design",
        "finance",
        "science",
        "general"
      ],
      "default": "general",
      "description": "Skill category — must match the directory name"
    },
    "tags": {
      "type": "array",
      "items": {
        "type": "string",
        "maxLength": 50
      },
      "maxItems": 20,
      "default": [],
      "description": "Searchable tags (lowercase kebab-case, e.g. 'code-review')"
    },
    "instructions": {
      "type": "string",
      "minLength": 1,
      "maxLength": 8000,
      "description": "Full agent instructions. Minimum 100 words recommended for quality bar."
    },
    "tools": {
      "type": "array",
      "items": {
        "type": "object"
      },
      "default": [],
      "description": "Optional MCP tool definitions (advanced)"
    }
  }
}
