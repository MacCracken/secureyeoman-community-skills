{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://github.com/MacCracken/secureyeoman-community-skills/schema/skill.schema.json",
  "title": "SecureYeoman Community Skill",
  "description": "Schema for a community-contributed SecureYeoman skill",
  "type": "object",
  "required": ["name", "instructions"],
  "additionalProperties": false,
  "properties": {
    "$schema": {
      "type": "string"
    },
    "name": {
      "type": "string",
      "minLength": 1,
      "maxLength": 200,
      "description": "Unique, human-readable skill name"
    },
    "description": {
      "type": "string",
      "maxLength": 2000,
      "default": "",
      "description": "Short description shown in the marketplace"
    },
    "version": {
      "type": "string",
      "maxLength": 50,
      "pattern": "^\\d+\\.\\d+\\.\\d+$",
      "default": "1.0.0",
      "description": "Semantic version (major.minor.patch)"
    },
    "author": {
      "type": "string",
      "maxLength": 200,
      "default": "",
      "description": "Author name or GitHub username"
    },
    "category": {
      "type": "string",
      "maxLength": 100,
      "enum": [
        "development",
        "productivity",
        "security",
        "utilities",
        "design",
        "finance",
        "science",
        "general"
      ],
      "default": "general",
      "description": "Skill category â€” must match the directory name"
    },
    "tags": {
      "type": "array",
      "items": {
        "type": "string",
        "maxLength": 50
      },
      "maxItems": 20,
      "default": [],
      "description": "Searchable tags"
    },
    "instructions": {
      "type": "string",
      "minLength": 1,
      "maxLength": 8000,
      "description": "Full agent instructions"
    },
    "tools": {
      "type": "array",
      "items": {
        "type": "object"
      },
      "default": [],
      "description": "Optional MCP tool definitions (advanced)"
    }
  }
}
